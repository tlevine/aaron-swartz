<body id="pinboard" onload="if (init != null) { init(); }">
<script language="javascript">
  var initHandlers = Array();
  function registerInitHandler(cb)
  {
    initHandlers.push(cb);
  }
  
  function init()
  {
    for (var i in initHandlers)
    {
      var cb = initHandlers[i];
      cb();
    }
  }
</script>
